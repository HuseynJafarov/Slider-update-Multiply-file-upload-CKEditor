@model SliderDetail
@{
    ViewData["Title"] = "Edit";
}



<div class="container-fluid mx-5 my-3">
    <h3>Update Slider Detail</h3>
    <div class="img-area">
        <img src="~/img/@Model.Photo" style="width:200px; height:200px;" alt="Alternate Text" />
    </div>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group my-3">
            <input style="width:300px !important" class="form-control" asp-for="SignImage">
            <span class="text-danger" asp-validation-for="SignImage"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputUsername2">Header</label>
            <input type="text" class="form-control" asp-for="Header">
            <span class="text-danger my-1" asp-validation-for="Header"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputUsername2">Description</label>
            <input type="text" class="form-control" asp-for="Description">
            <span class="text-danger my-1" asp-validation-for="Description"></span>
        </div>
        <a class="btn btn-primary" asp-controller="SliderDetail" asp-action="Index">Back</a>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
