@model SliderDetail
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
        @if (ViewBag.Count == 0)
        {
            <div class="create-btn mb-3">
                <a asp-area="AdminArea" asp-controller="SliderDetail" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>
            </div>

        }
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Header
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Image
                    </th>
                    <th style="text-align: center;">
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                
                    @if (Model != null)
                    {

                        <tr>
                            <td>
                                @Html.Raw(Model.Header)
                            </td>
                            <td>
                                @Html.Raw(Model.Description)
                            </td>
                            <td>
                                <img src="~/img/@Model.Photo" alt="slider" />
                            </td>
                            <td style="text-align: center;">
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info"><i class="mdi mdi-information mx-0"></i></a>
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                                <form style="display: inline-block;" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                                    <button type="submit" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></button>
                                </form>
                            </td>
                        </tr>



                    }

                

            </tbody>
        </table>
    </div>
</div>
