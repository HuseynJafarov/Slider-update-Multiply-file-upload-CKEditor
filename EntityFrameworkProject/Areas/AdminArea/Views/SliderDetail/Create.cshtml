@model SliderDetailCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid mx-5 my-3">
    <h3>Slider image</h3>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <input class="form-control" asp-for="Header">
            <span class="text-danger" asp-validation-for="Header"></span>
            <input class="form-control" asp-for="Desc">
            <span class="text-danger" asp-validation-for="Desc"></span>
            <input class="form-control" asp-for="SingPhotos">
            <span class="text-danger" asp-validation-for="SingPhotos"></span>
        </div>
        <a class="btn btn-primary" asp-controller="SliderDetail" asp-action="Index">Back</a>
        <a class="btn btn-warning" asp-controller="SliderDetail" asp-action="Create">Reset</a>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
