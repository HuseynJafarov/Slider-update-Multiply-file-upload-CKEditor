@model Employee

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-5">
    <div class="card">
        <div class="card-header">
            Employee detail
        </div>
        <div class="card-body">
            <p class="card-text">@Model.FullName</p>
            <p class="card-text">@Model.Age</p>
            <p class="card-text">@Model.Position</p>
            <p class="card-text">@Model.IsActive</p>
        </div>
    </div>
</div>

